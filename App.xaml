<Application x:Class="Ritsukage_Message_Client.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Ritsukage_Message_Client"
			 xmlns:tb="http://www.hardcodet.net/taskbar"
             StartupUri="MainWindow.xaml"
			 ShutdownMode="OnExplicitShutdown">
	<Application.Resources>
		<local:ReleaseFormHidden x:Key="ReleaseFormHidden"/>
		<tb:TaskbarIcon x:Key="Taskbar"
						IconSource="res/XLY.ico"
						ToolTipText="小律影Bot 消息客户端"
						LeftClickCommand="{StaticResource ReleaseFormHidden}"
						DoubleClickCommand="{StaticResource ReleaseFormHidden}"/>
	</Application.Resources>
</Application>